@page
@model IndexModel
@{
    ViewData["Title"] = "Account info";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row">
    <div class="col-md-6">
        <h4>User informations</h4>
        <hr />
        <form id="user-form" method="post">
            <div class="form-group">
                <label asp-for="ApplicationUser.Email"></label>
                <input asp-for="ApplicationUser.Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.FirstName"></label>
                <input asp-for="ApplicationUser.FirstName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.LastName"></label>
                <input asp-for="ApplicationUser.LastName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.PhoneNumber"></label>
                <input asp-for="ApplicationUser.PhoneNumber" class="form-control" disabled />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form id="address-form" method="post">
            <h4>Address informations</h4>
            <hr />
            <div class="form-group">
                <label asp-for="ApplicationUser.Address.Country"></label>
                <input asp-for="ApplicationUser.Address.Country" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Address.PostalCode"></label>
                <input asp-for="ApplicationUser.Address.PostalCode" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Address.Town"></label>
                <input asp-for="ApplicationUser.Address.Town" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Address.Street"></label>
                <input asp-for="ApplicationUser.Address.Street" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Address.HouseNumber"></label>
                <input asp-for="ApplicationUser.Address.HouseNumber" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Address.ApartmentNumber"></label>
                <input asp-for="ApplicationUser.Address.ApartmentNumber" class="form-control" disabled />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}