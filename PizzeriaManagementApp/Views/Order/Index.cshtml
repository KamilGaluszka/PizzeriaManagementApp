@model List<PizzeriaManagementApp.Models.Order>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order list</h2>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>
                        Pizzeria name
                    </th>
                    <th>
                        Pizzas in order
                    </th>
                    <th>
                        Order address
                    </th>
                    <th>
                        Total price
                    </th>
                    <th>
                        Created on
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Payment
                    </th>
                    @if (!User.IsInRole(WC.CustomerRole) && User.Identity.IsAuthenticated)
                    {
                        <th>
                            Actions
                        </th>
                    }

                </tr>
            </thead>
            <tbody>
                @foreach(Order order in Model)
                {
                    <tr>
                        <td>
                            @order.Pizzeria.Name
                        </td>
                        <td>
                            @{
                                List<string> pizzaNames = new();
                                foreach (CartOrders cardOrder in order.CartOrders)
                                {
                                    pizzaNames.Add($"{cardOrder.Amount}x {cardOrder.Pizza.Name}");
                                };
                                <p>@string.Join(", ", pizzaNames)</p>
                            }
                        </td>
                        <td>
                            @($"{order.Address.Country} {order.Address.Street} {order.Address.HouseNumber} {order.Address.ApartmentNumber} {order.Address.Town} {order.Address.PostalCode}")
                        </td>
                        <td>
                            @order.TotalPrice
                        </td>
                        <td>
                            @order.CreatedOn.ToString("HH:mm:ss tt")
                        </td>
                        <td>
                            @order.Status
                        </td>
                        <td>
                            @order.Payment
                        </td>
                        @if(!User.IsInRole(WC.CustomerRole) && User.Identity.IsAuthenticated)
                        {
                            <td class="text-center">
                            <a asp-controller="Order" asp-action="Update" asp-route-Id="@order.Id" class="btn btn-primary w-75 mx-2">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No order exists.</p>
    }
</div>