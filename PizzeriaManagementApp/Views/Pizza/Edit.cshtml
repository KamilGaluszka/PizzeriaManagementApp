@model PizzeriaManagementApp.ViewModels.PizzaCreateVM

<form method="post" enctype="multipart/form-data">
    <input asp-for="Pizza.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-3">Edit pizza</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizza.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizza.Name" class="form-control" />
                        <span asp-validation-for="Pizza.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizza.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizza.Price" class="form-control" />
                        <span asp-validation-for="Pizza.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizza.SizeId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Pizza.SizeId" asp-items="@Model.Sizes" class="form-control">
                        </select>
                        <span asp-validation-for="Pizza.SizeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizza.ThicknessId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Pizza.ThicknessId" asp-items="@Model.Thicknesses" class="form-control">
                        </select>
                        <span asp-validation-for="Pizza.ThicknessId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizza.Image"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" accept="image/png, image/gif, image/jpeg" class="form-control" />
                        <span asp-validation-for="Pizza.Image" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-warning w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100">
                                <i class="fas fa-sign-out-alt"></i>&nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <img src="@WC.PizzaImagePath@Model.Pizza.Image" class="w-100" style="border-radius:5px; border: 1px solid #bbb" />
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}