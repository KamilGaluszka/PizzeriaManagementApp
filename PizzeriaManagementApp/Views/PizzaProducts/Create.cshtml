@model PizzeriaManagementApp.ViewModels.PizzaProductsViewModel

<form method="post" asp-action="Create">
    <input asp-for="IdPizza" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-3">Add products to pizza</h2>
        </div>
        <div class="row">
            <div class="col-8 offset-2">
                @if (Model.ProductsCheckBoxList.Count > 0)
                {
                    <div class="form-group row">
                        <table class=" table table-bordered table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="width:20%">
                                        Is selected
                                    </th>
                                    <th>
                                        Product name
                                    </th>
                                </tr>
                            </thead>
                            @for (int i = 0; i < Model.ProductsCheckBoxList.Count(); i++)
                            {
                                @Html.HiddenFor(p => p.ProductsCheckBoxList[i].Id)
                                <tr>
                                    <td>
                                        @Html.CheckBoxFor(p => p.ProductsCheckBoxList[i].IsChecked)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(p => ((Product)p.ProductsCheckBoxList[i].Object).Name)
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center">All possible products are already assigned to this pizza</p>
                }
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        @if (Model.ProductsCheckBoxList.Count > 0)
                        {
                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Add" />
                            </div>
                        }
                        <div class="col">
                            <a asp-controller="PizzaProducts" asp-route-Id="@Model.IdPizza" asp-action="Index" class="btn btn-primary w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
    </div>
</form>