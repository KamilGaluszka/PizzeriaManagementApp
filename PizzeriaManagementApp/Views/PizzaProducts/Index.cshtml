@model IEnumerable<PizzeriaManagementApp.Models.PizzaProducts>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Pizza products list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-route-Id="@Model.First().IdPizza" asp-controller="PizzaProducts" asp-action="Create" class=" btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Add products
            </a>
            <a asp-controller="Pizza" asp-action="Index" class=" btn btn-info">
                <i class="fas fa-arrow-alt-circle-left"></i>&nbsp; Back
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.First().Id != Guid.Empty)
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>
                        Product name
                    </th>
                    <th>
                        Remove product from pizza
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (PizzaProducts pizzaProduct in Model)
                {
                <tr>
                    <td width="40%">
                        @pizzaProduct.Product.Name
                    </td>
                    <td>
                        <a asp-route-Id="@pizzaProduct.Id" asp-controller="PizzaProducts" asp-action="Delete" class="btn btn-danger m-0 text-white">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No pizza products are assigned.</p>
    }
</div>