@model PizzeriaManagementApp.Models.Pizzeria

<form method="post" asp-action="DeleteConfirm">
    <input asp-for="Id" hidden />
    <input asp-for="AddressId" hidden />
    <input asp-for="Address.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-3">Delete pizza</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="OpenTime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="OpenTime" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CloseTime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CloseTime" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address.Country"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address.Country" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address.PostalCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address.PostalCode" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address.Town"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address.Town" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address.Street"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address.Street" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address.HouseNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address.HouseNumber" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address.ApartmentNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address.ApartmentNumber" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100">
                                <i class="fas fa-sign-out-alt"></i>&nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}