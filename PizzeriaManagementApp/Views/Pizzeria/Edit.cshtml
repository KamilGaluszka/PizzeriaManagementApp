@model PizzeriaManagementApp.ViewModels.PizzeriaCreateVM

<form method="post" >
    <input asp-for="Pizzeria.Id" hidden />
    <input asp-for="Pizzeria.AddressId" hidden />
    <input asp-for="Pizzeria.Address.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-3">Edit pizzeria</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizzeria.Name" class="form-control" />
                        <span asp-validation-for="Pizzeria.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.OpenTime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizzeria.OpenTime" class="form-control" />
                        <span asp-validation-for="Pizzeria.OpenTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.CloseTime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizzeria.CloseTime" class="form-control" />
                        <span asp-validation-for="Pizzeria.CloseTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.Manager"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Pizzeria.IdManager" asp-items="@Model.Managers" class="form-control">
                        </select>
                        <span asp-validation-for="Pizzeria.IdManager" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.Address.Country"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizzeria.Address.Country" class="form-control" />
                        <span asp-validation-for="Pizzeria.Address.Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.Address.PostalCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizzeria.Address.PostalCode" class="form-control" />
                        <span asp-validation-for="Pizzeria.Address.PostalCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.Address.Town"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizzeria.Address.Town" class="form-control" />
                        <span asp-validation-for="Pizzeria.Address.Town" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.Address.Street"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizzeria.Address.Street" class="form-control" />
                        <span asp-validation-for="Pizzeria.Address.Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.Address.HouseNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizzeria.Address.HouseNumber" class="form-control" />
                        <span asp-validation-for="Pizzeria.Address.HouseNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pizzeria.Address.ApartmentNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pizzeria.Address.ApartmentNumber" class="form-control" />
                        <span asp-validation-for="Pizzeria.Address.ApartmentNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-warning w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100">
                                <i class="fas fa-sign-out-alt"></i>&nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}