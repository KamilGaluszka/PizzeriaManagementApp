@model PizzeriaManagementApp.Models.PizzeriaEmployee

<form method="post" asp-action="DeleteConfirm">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-3">Remove employee</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Employee.FirstName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Employee.FirstName" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Employee.LastName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Employee.LastName" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Remove" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" asp-route-Id="@Model.PizzeriaId" class="btn btn-primary w-100">
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}