@model PizzeriaManagementApp.ViewModels.PizzeriaPizzaIndexVM

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@Model.PizzeriaName pizzas list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-route-Id="@Model.PizzeriaPizzas.First().PizzeriaId" asp-controller="PizzeriaPizzas" asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i>&nbsp; Add pizzas
            </a>
            <a asp-controller="Pizzeria" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-alt-circle-left"></i>&nbsp; Back
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.PizzeriaPizzas.First().Id != Guid.Empty)
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>
                        Pizza name
                    </th>
                    <th>
                        Remove pizza from pizzeria
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (PizzeriaPizza pizzeriaPizza in Model.PizzeriaPizzas)
                {
                <tr>
                    <td>
                        @pizzeriaPizza.Pizza.Name
                    </td>
                    <td>
                        <a asp-route-Id="@pizzeriaPizza.Id" asp-controller="PizzeriaPizzas" asp-action="Delete" class="btn btn-danger m-0 text-white">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No pizzeria pizzas are assigned.</p>
    }
</div>